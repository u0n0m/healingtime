<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.healingtime.healingtime.MainActivity"
    android:background="#F4F3D7">

    <RelativeLayout
        android:id="@+id/therapy_dictionary_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">
        <ImageButton
            android:id="@+id/move_to_main"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/main_top_img1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#ffffff"/>
        <ImageButton
            android:id="@+id/move_to_search"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/search_green"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            tools:ignore="RtlHardcoded" />
        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:backgroundTint="#21f908"
            android:maxLines="1"
            android:hint="검색어를 입력해 주세요"
            >


        </EditText>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/aroma_color_select_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@id/therapy_dictionary_top"
        android:background="#79A641">
        <LinearLayout
            android:id="@+id/therapy_dictionary_aroma1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/aroma_white"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="#79A641"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aroma"
                android:textSize="12dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/therapy_dictionary_color1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#8CBF48">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"
                android:src="@drawable/color_dic"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="#8CBF48" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="12dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/aroma_color_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aroma_color_select_btn"
        android:src="@drawable/aroma_dic_banner"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:id="@+id/single_blending_select_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/aroma_color_select_image"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Oils"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blending Oils"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/aroma_listview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/single_blending_select_btn"
        android:layout_above="@id/therapy_dictionary_bottom"
        android:divider="#ffcc22"
        android:dividerHeight="1.5dp"
        android:choiceMode="singleChoice"    />



    <LinearLayout
        android:id="@+id/therapy_dictionary_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/link_color_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/setting_bottom_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/bright1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="칼라 테라피"
                android:textColor="#76BB17"
                android:textStyle="bold"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_aroma_therapy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/setting_bottom_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/aroma_therapy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="아로마 테라피"
                android:textColor="#76BB17"
                android:textStyle="bold"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_dictionary"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/setting_bottom_white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/therapy_dic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="테라피 사전"
                android:textColor="#76BB17"
                android:textStyle="bold"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/link_settings"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/setting_bottom_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="환경 설정"
                android:textColor="#76BB17"
                android:textStyle="bold"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
