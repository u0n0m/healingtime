<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.healingtime.healingtime.MainActivity"
    android:background="#F4F3D7">

    <RelativeLayout
        android:id="@+id/main_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">
        <ImageButton
            android:id="@+id/move_to_main"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/main_top_img1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#ffffff"/>
        <ImageButton
            android:id="@+id/move_to_search"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/search_green"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main_status"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/main_top">
        <View
            android:id="@+id/main_status_image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#B3B6A4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:text="잔여량 없음 (A구간)"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_status_image1"
            android:background="#6A000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:text="  "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/main_status_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="  "
                android:textStyle="bold"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toLeftOf="@id/main_status_text_right"
                android:layout_centerInParent="true"
                android:background="#B3B6A4" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main_btn_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_status"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/main_btn_area_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="95dp"
                android:layout_height="94dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_round_btn_shadow"/>
                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/main_round_btn"
                    android:src="@drawable/main_colortherapy"
                    android:padding="28dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="칼라 테라피"
                android:textColor="#8A000000"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_round_btn_shadow"/>
                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/main_round_btn"
                    android:src="@drawable/main_therapy_dic"
                    android:padding="26dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="테라피 사전"
                android:textColor="#8A000000"
                android:textSize="17dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_btn_area_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="95dp"
                android:layout_height="94dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_round_btn_shadow"/>
                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/main_round_btn"
                    android:src="@drawable/main_aromatherapy"
                    android:padding="30dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="아로마 테라피"
                android:textColor="#8A000000"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_round_btn_shadow"/>
                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/main_round_btn"
                    android:src="@drawable/main_market"
                    android:padding="28dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="마켓"
                android:textColor="#8A000000"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/settings_green"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#F4F3D7"/>
</RelativeLayout>
